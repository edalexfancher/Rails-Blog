<header>
  <h1>Articles List</h1>
  <h3><%= link_to 'Home', root_path %>
</header>

<div class="assets">
  <button><%= link_to 'New article', new_article_path %></button>
  <table>
    <tr>
      <th>Title</th>
      <th>Text</th>
    </tr>

    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><button><%= link_to 'Show', article_path(article) %></button></td>
        <td><button><%= link_to 'Edit', edit_article_path(article) %></button></td>
        <td><button><%= link_to 'Delete', article_path(article),
                method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </table>
</div>
